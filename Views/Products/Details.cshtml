@model Tuple<Product,IEnumerable<ProductImage>>


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="py-5 bg-light" style="min-height:800px; ">
    <div class="container">
        <div class="row d-flex justify-content-center ">
            <div class="col-md-6">
                <div class="d-flex justify-content-center">
                    <img src="@Url.Content("~/image/product/"+Model.Item1.Image)" id="main-img" class="img-tumbnail" width="400" height="450" title="img..." />
                </div>
                <div class="mt-3 d-flex justify-content-center">
                    @foreach (var item in Model.Item2)
                    {
                        <div class="col ms-3" style="max-width:80px ">
                            <img src="@Url.Content("~/image/product/multi/" + item.Image)" id="img-@item.Id" onclick="changeImage(src)" class="img-tumbnail img" height="70px" width="100%" title="img..." />
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6 px-4">
                <h1>@Model.Item1.Name</h1><br />
                <p class="fs-4 mt-2 mb-5"> @Model.Item1.description </p>
                <span class='fs-3 pe-5'>@Model.Item1.Price</span>
                @if (Model.Item1.Qty >= 1)
                {
                    <span class='fs-3 text-success'>In Stack (@Model.Item1.Qty) </span>
                }
                else
                {
                    <span class='fs-3 text-success'>Out of Stack</span>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
    function changeImage(src){
        let mainImg = document.getElementById("main-img");
        mainImg.setAttribute("src",src)
    }
    

    </script>
}